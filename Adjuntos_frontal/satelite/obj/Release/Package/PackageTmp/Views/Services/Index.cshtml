@{
    ViewData["Title"] = ViewBag.subTitulo;
}


<div id="pagebody" class="level4 row">
    <form id="formCargArch" enctype="multipart/form-data">
        <div class="desc_adju">
            Tamaño maximo: @ViewBag.limitSizeFileName <br>
            Número de archivos: uno por solicitud. <br>
            Formatos: @ViewBag.docuServ.</div>
        <div class="form-group">
            <div class="custom-file">
                <input type="file" class="custom-file-input" name="file" id="file">
                <label class="custom-file-label" for="file">Seleccionar archivo (Word, PDF, JPG, JPEG, PNG)</label>
                <div class="invalid-feedback-utpl" id="error_text">@ViewBag.Error</div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary utpl-btn" id="btn-send-utpl">Enviar</button>
        <div class="spinner-border text-secondary d-none" id="loader" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </form>
</div>



@if (ViewBag.Error != "")
{
<script>
    $("#loader").addClass("d-none");
</script>
}


